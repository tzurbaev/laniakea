{
    "name": "laniakea/laniakea",
    "description": "WIP",
    "keywords": [
        "tzurbaev",
        "laniakea"
    ],
    "homepage": "https://github.com/tzurbaev/laniakea",
    "license": "MIT",
    "authors": [
        {
            "name": "Timur Zurbaev",
            "email": "zurbaev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "orchestra/testbench": "9.x-dev",
        "pestphp/pest": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "Laniakea\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laniakea\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laniakea\\LaniakeaServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
